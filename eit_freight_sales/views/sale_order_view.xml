    <template id="report_booking_sale_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <br/>
            <div class="row mt-4 mb-2">

                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>Transport Type:</strong>
                    <br/>
                    <span class="m-0" t-field="doc.transport_type_id"/>
                </div>
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong t-if="doc.is_fcl_or_ftl">Container Type:</strong>
                    <strong t-else="">Package Type:</strong>
                    <br/>
                    <span class="m-0" t-if="doc.is_fcl_or_ftl" t-field="doc.container_type"/>
                    <span class="m-0" t-else="" t-field="doc.package_type"/>
                </div>


            </div>
            <div class="row mt-4 mb-2">

                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>From:</strong>
                    <br/>
                    <span class="m-0" t-field="doc.pol"/>
                    <br/>

                    <p t-if="doc.transit_time_duration">
                        <p>Transit Time:
                            <span t-esc="doc.transit_time_duration"/>
                        </p>
                    </p>


                </div>
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>To:</strong>
                    <br/>


                    <span class="m-0" t-field="doc.pod"/>
                    <br/>
                    <p t-if="doc.free_time_duration">
                        <p>Free Time:
                            <span t-esc="doc.free_time_duration"/>
                        </p>
                    </p>

                </div>
            </div>

        </xpath>
        <xpath expr="//th[@name='th_priceunit']" position="replace">
            <th name="th_priceunit" class="text-end">Unit Rate</th>
            <th name="th_currency" class="text-end">Curr</th>
        </xpath>
        <xpath expr="//td[@name='td_priceunit']" position="replace">
            <td name="td_priceunit" class="text-end">
                <span t-field="line.unit_rate">3</span>
            </td>

            <td name="td_currency" class="text-end">
                <span t-field="line.currency_id">3</span>
            </td>
        </xpath>
    </template>

